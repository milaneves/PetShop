@model IEnumerable<PetShop.Models.Animal>

@{ ViewData["Title"] = "Consultar Transações"; }

<h2>Consultar</h2>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

<div class="row botao-consultar-novo mt-4">
    <div class="col-lg-12">
        <a class="btn btn-primary" href="@Url.Action("Cadastrar", "Animal")">
            Novo Cadastro
        </a>

    </div>
</div>
@using (Html.BeginForm("ConsultarAnimal", "Animal", FormMethod.Post))
{
<div style="text-align: center;">
    <input type="search"  align="center" name="nomeDigitado"  placeholder="informe o nome do animal">
    <input type=submit class="btn btn-light" value=Procurar>
</div>
    <br /> <br /> <br />
<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().NomeAnimal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().MotivoInternacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().EstadoSaude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().NomeTutor)
                </th>
                <th></th>
            </tr>
        </thead>
     <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeAnimal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MotivoInternacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoSaude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeTutor)
                    </td>

                    <td>
                        <div class="text-center">
                            <a class="btn btn-danger" href="@Url.Action("DeletarAnimal", "Animal", new { id = item.Id })">Excluir</a>
                            <a class="btn btn-warning" href="@Url.Action("EditarAnimal", "Animal", new { id = item.Id })">Editar</a>
                        </div>
                    </td>
                </tr>
        }

      </tbody>
</table>
}

